<h2>{{localize "LAZY_PREP.NPCS"}}</h2>

<ul class="lazy-npcs">
  {{#each session.npcs}}
    <li class="npc-row" data-id="{{id}}">
      <label>
        {{localize "LAZY_PREP.NAME"}}
        <input type="text" name="npc-name-{{id}}" value="{{name}}" placeholder="{{localize 'LAZY_PREP.NAME'}}"/>
      </label>
      <label>
        {{localize "LAZY_PREP.ROLE"}}
        <input type="text" name="npc-role-{{id}}" value="{{role}}" placeholder="{{localize 'LAZY_PREP.ROLE'}}"/>
      </label>
      <label class="notes">
        {{localize "LAZY_PREP.NOTES"}}
        <input type="text" name="npc-notes-{{id}}" value="{{notes}}" placeholder="{{localize 'LAZY_PREP.NOTES'}}"/>
      </label>
    </li>
  {{/each}}
</ul>

<button class="add-npc">{{localize "LAZY_PREP.ADD"}} {{localize "LAZY_PREP.NPC"}}</button>
