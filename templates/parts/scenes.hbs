<h2>{{localize "LAZY_PREP.SCENES"}}</h2>

<ul class="lazy-scenes">
  {{#each session.scenes}}
    <li class="scene-row" data-id="{{id}}">
      <label>
        {{localize "LAZY_PREP.NAME"}}
        <input type="text" name="scene-name-{{id}}" value="{{name}}" placeholder="{{localize 'LAZY_PREP.NAME'}}"/>
      </label>
      <label class="notes">
        {{localize "LAZY_PREP.NOTES"}}
        <input type="text" name="scene-notes-{{id}}" value="{{notes}}" placeholder="{{localize 'LAZY_PREP.NOTES'}}"/>
      </label>
    </li>
  {{/each}}
</ul>

<button class="add-scene">{{localize "LAZY_PREP.ADD"}} {{localize "LAZY_PREP.SCENE"}}</button>
